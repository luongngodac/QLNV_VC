@model QLNV_VC.Models.PhongBan

@{
    ViewBag.Title = "Xóa phòng ban";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xóa phòng ban</h2>

<h3>Bạn có chắc chắn muốn xóa thông tin về phòng ban này?</h3>
<div>
    <h4>Phòng Ban</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên phòng ban
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenPB)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>

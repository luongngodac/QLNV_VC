@model IEnumerable<QLNV_VC.Models.QuanTri>

@{
    ViewBag.Title = "Quản trị";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản Trị</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Admin
        </th>
        <th>
            Họ tên
        </th>
        <th>
            Mật khẩu
        </th>
        <th>Chức năng</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Admin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoTen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Email }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Email }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Email })
        </td>
    </tr>
}

</table>

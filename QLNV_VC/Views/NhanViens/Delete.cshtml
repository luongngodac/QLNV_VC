@model QLNV_VC.Models.NhanVien

@{
    ViewBag.Title = "Xóa nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string gioitinh = "";
}

<h2>Xóa nhân viên</h2>

<h3>Bạn có chắc chắn muốn xóa?</h3>
<table border="1" cellpadding="0" cellspacing="0" style="font-size:14px;margin-left:50px;">
    <tr>
        <td>
            <table cellpadding="2" cellspacing="10">
                <caption><b>NHÂN VIÊN</b></caption>
                <tr>
                    <td rowspan="8"><img src="@Html.DisplayFor(model => model.AnhNV)" width="100" height="100" /></td>
                    <td>Mã nhân viên:</td>
                    <td>@Html.DisplayFor(model => model.MaNV)</td>
                </tr>
                <tr>
                    <td>Họ nhân viên:</td>
                    <td>@Html.DisplayFor(model => model.HoNV)</td>
                </tr>
                <tr>
                    <td>Tên nhân viên:</td>
                    <td>@Html.DisplayFor(model => model.TenNV)</td>
                </tr>
                <tr>
                    <td>Giới tính:</td>
                    <td>
                        @{if (Model.GioiTinh == true)
                            { gioitinh = "Nam"; }
                            else
                            { gioitinh = "Nữ"; }
                        }
                        @gioitinh
                    </td>
                </tr>
                <tr>
                    <td>Ngày sinh:</td>
                    <td>@Html.DisplayFor(model => model.NgaySinh)</td>
                </tr>
                <tr>
                    <td>Lương:</td>
                    <td>@Html.DisplayFor(model => model.Luong)</td>
                </tr>
                <tr>
                    <td>Địa chỉ:</td>
                    <td>@Html.DisplayFor(model => model.DiaChi)</td>
                </tr>
                <tr>
                    <td>Phòng ban:</td>
                    <td>@Html.DisplayFor(model => model.PhongBan.TenPB)</td>
                </tr>

            </table>
        </td>
    </tr>
</table>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        @Html.ActionLink("Quay lại danh sách", "Index")
    </div>
}

